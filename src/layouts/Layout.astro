---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Button from '../components/Button.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<div id="app" class="relative h-screen p-1 gap-1">
			<aside class="[grid-area:aside] flex flex-col items-end overflow-y-auto bg-#181C35">
				<img src="/logo.svg" alt="Logo" class="p-1 w-10">
				<Header>Acerca</Header>
				<Header>Servicios</Header>
				<Header>Precios</Header>
				<Header>Contacto</Header>
			  </aside>
			<main class="[grid-area:main] bg-red-200">
				<p class="text-2xl p-2"><strong class="text-secondary text-2xl">SOF</strong>
					<strong class="text-white">DATA</strong></p>
			</main>
			<footer class="[grid-area:player] min-h-[100px] bg-blue-300">
				FOOTER
			</footer>
			<slot />
		</div>
	</body>
</html>
<style>
	#app {
		display: grid;
		grid-template-areas:
			"aside main main"
			"player player player";
		grid-template-columns: 190px 1fr;
		grid-template-rows: 1fr auto;
	}
</style>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "Poppins", system-ui, sans-serif;
		background: #1b1f2b;
		background-size: 224px;
		color: #000;
		padding: 2%;
	}
